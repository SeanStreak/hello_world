<h1>Listing POSTRR's</h1>

<%= link_to 'Create a Post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', posts_path(post) %></td>
    </tr>
  <% end %>
</table>


